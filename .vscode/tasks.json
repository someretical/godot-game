{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "windows-build-debug",
            "type": "shell",
            "detail": "Windows debug build",
            "command": "scons",
            "windows": {
                "args": [
                    "platform=windows",
                    "target=template_debug",
                    "debug_symbols=yes",
                    "optimize=debug"
                ]
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "windows-build-release",
            "type": "shell",
            "detail": "Windows release build",
            "command": "scons",
            "windows": {
                "args": [
                    "platform=windows",
                    "target=template_release",
                    "debug_symbols=no",
                    "optimize=release"
                ]
            },
            "problemMatcher": [],
            "group": {
                "kind": "build"
            }
        }
    ]
}